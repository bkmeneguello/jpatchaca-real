<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>

<TitledPane fx:id="optionsPane" xmlns:fx="http://javafx.com/fxml"
	fx:controller="com.meneguello.OptionsController"
	text="options" expanded="false">
	<GridPane>
		<Label text="hostname" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
		<TextField fx:id="hostname" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
		<Label text="username" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
		<TextField fx:id="username" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
		<Label text="password" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
		<PasswordField fx:id="password" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
		
		<Button text="%action.confirm" onAction="#confirm" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
		<Button text="%action.cancel" onAction="#cancel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
	</GridPane>
</TitledPane>